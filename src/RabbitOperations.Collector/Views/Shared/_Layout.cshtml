@using System.Threading.Tasks
@using RabbitOperations.Collector.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rabbit Operations Dashboard</title>
    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        @*<link rel="stylesheet" href="~/css/site.css"/>*@
        <link href="~/css/dashboard.css" rel="stylesheet">
        <link href="~/css/stickyFooter.css" rel="stylesheet">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"/>
        @*<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>*@
        <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true">
        <link href="~/css/stickyFooter.css" rel="stylesheet" asp-append-version="true">
    </environment>

    @RenderSection("head", required: false)

</head>
<body ng-app="rabbitOperationsApp">

    <nav class="navbar navbar-inverse navbar-fixed-top" ng-controller="topBarController">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/images/favicon.png" class="headerLogo" />
                <a class="navbar-brand" href="#">Rabbit Operations</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li ng-click="showWhatsNew()"><a href="#">What's New</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" ng-controller="navBarController">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li ng-click="navigateTo('Search')" ng-class="{active: selected === 'search'}"><a href="/search">Search <span class="sr-only">(search)</span></a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li ng-class="{active: selected === 'ravenDbStudio'}"><a target="_blank" href="@RavenLinkHelper.RavenStudioUrl()">RavenDB Studio</a></li>
                    <li ng-class="{active: selected === 'metrics'}"><a target="_blank" href="metrics">Metrics</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown">Rabbit Management Web<b class="caret"></b></a>
                        <ul class="dropdown dropdown-menu">
                            <li class="menu-item" ng-repeat="application in applications"><a target="_blank" href="{{application.rabbitManagementWebUrl}}">{{application.applicationName}}</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                @RenderBody()

            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            <div class="col-sm-offset-3 col-sm-3 col-md-offset-2 col-md-2"><p class="text-muted">Version: @VersionHelper.Version()</p></div>
            <div class="col-sm-offset-3 col-sm-3 col-md-offset-6 col-md-2"><a href="http://www.ravendb.org"><img src="~/images/poweredbyravendb.png" /></a></div>
        </div>
    </footer>
</html>
