@using Nancy.ViewEngines.Razor
@using RabbitOperations.Collector.Web
@using RabbitOperations.Collector.Web.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="/content/images/favicon.png" />

    @RenderSection("head", false)
    @if (!string.IsNullOrEmpty(ViewBag.Title))
    {
        <title>@ViewBag.Title</title>
    }
    
    <title>Rabbit Operations Dashboard</title>

    <!-- Bootstrap core CSS -->
    <link href="content/Bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="content/css/dashboard.css" rel="stylesheet">
    <link href="content/css/stickyFooter.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/default.min.css">
</head>

<body ng-app="rabbitOperationsApp">

    <nav class="navbar navbar-inverse navbar-fixed-top" ng-controller="topBarController">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="content/images/favicon.png" class="headerLogo"/>
                <a class="navbar-brand" href="#">Rabbit Operations</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li ng-click="showWhatsNew()"><a href="#">What's New</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" ng-controller="navBarController">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li ng-click="navigateTo('Search')" ng-class="{active: selected === 'search'}"><a href="/search">Search <span class="sr-only">(search)</span></a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li ng-class="{active: selected === 'ravenDbStudio'}"><a target="_blank" href="@Html.RavenStudioUrl()">RavenDB Studio</a></li>
                    <li ng-class="{active: selected === 'metrics'}"><a target="_blank" href="metrics">Metrics</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown">Rabbit Management Web<b class="caret"></b></a>
                        <ul class="dropdown dropdown-menu">
                            <li class="menu-item" ng-repeat="application in applications"><a target="_blank" href="{{application.rabbitManagementWebUrl}}">{{application.applicationName}}</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                @RenderBody()

            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            <div class="col-sm-offset-3 col-sm-3 col-md-offset-2 col-md-2"><p class="text-muted">Version: @VersionHelper.Version()</p></div>
            <div class="col-sm-offset-3 col-sm-3 col-md-offset-6 col-md-2"><a href="http://www.ravendb.org"><img src="content/images/poweredbyravendb.png" /></a></div>
        </div>
    </footer>

<!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="content/Bootstrap/js/bootstrap.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular-route.min.js"></script>
    <script src="/content/ui-bootstrap/ui-bootstrap-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js"></script>
    <script src="/content/angular-highlightjs/angular-highlightjs.min.js"></script>
    <script src="/content/moment/moment.min.js"></script>
    <script src="/content/App/rabbitOperationsApp.js"></script>
    <script src="/content/App/queueService.js"></script>
    <script src="/content/App/NavBar/navBarController.js"></script>
    <script src="/content/App/Dashboard/whatsNewController.js"></script>
    <script src="/content/App/NavBar/topBarController.js"></script>


    @RenderSection("Script", false)
</body>
</html>
